{% extends 'base.html.twig' %}

{% block title %}PostCard{% endblock %}

{% block body %}
    <h1 class="py-5 text-center mt-5 text-decoration-underline">PostCard</h1>

    <table class="table table-bordered border-primary">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post_card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post_card.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post_card.date ? post_card.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ post_card.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post_card.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_post_card_index') }}" role="button">back to list</a>

    <a class="btn btn-outline-success" href="{{ path('app_post_card_edit', {'id': post_card.id}) }}" role="button">edit</a>


    {{ include('post_card/_delete_form.html.twig') }}
{% endblock %}
