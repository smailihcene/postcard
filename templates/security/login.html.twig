{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {#    <form method="post" class="container flex flex-col justify-center mx-auto items-center h-screen"> #}
    <form method="post" class="container flex flex-col justify-center mx-auto items-center h-screen ">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="h-screen flex justify-center items-center ">
            <div class="py-6 px-8 h-80 bg-white rounded shadow-xl ">
                <div class="text-center">
                    <div class="font-bold text-xl">
                        <h1 class="h3 mb-3 font-weight-normal ">Please sign in</h1>
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="inputEmail" class="font-semibold ">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               placeholder="exemple@gmail.com"
                               class="border rounded px-2 py-1 text-gray-500"
                               autocomplete="email" required autofocus>
                    </div>
                    <div class="flex flex-col gap-2">
                        <label for="inputPassword" class="font-semibold ">Password</label>
                        <input type="password" name="password" id="inputPassword"
                               class="border rounded px-2 py-1 text-gray-500"
                               autocomplete="current-password"
                               required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">
                    </div>

                    <!-- ancien truc-->
