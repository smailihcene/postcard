{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{#    <form method="post" class="container flex flex-col justify-center mx-auto items-center h-screen">#}
    <form method="post" class="container flex flex-col justify-center mx-auto items-center h-screen">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
<div class="w-1/3 bg-red-500 text-center">
    <h1 class="h3 mb-3 font-weight-normal ">Please sign in</h1>
    <div class="flex flex-col gap-2">
        <label for="inputEmail" class="font-semibold ">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="border rounded px-2 py-1 text-gray-500"
               autocomplete="email" required autofocus>
    </div>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control block text-sm font-medium text-slate-700" autocomplete="current-password"
           required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
    See https://symfony.com/doc/current/security/remember_me.html

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    <div>
        <p>si vous n'avez pas un compte cliquez <a href="{{ path('app_register') }}">ici</a>
        </p>
    </div>
</div>
    </form>
{% endblock %}
